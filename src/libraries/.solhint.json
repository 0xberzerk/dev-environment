{
  "extends": "solhint:recommended",
  "rules": {
    "compiler-version": ["warn", "^0.8.0"],
    "quotes": ["error", "single"],
    "reason-string": "off",
    "no-empty-blocks": "off",
    "no-console": "off",
    "no-inline-assembly": "warn",
    "use-natspec": "error",
    "gas-custom-errors": "error",
    "func-visibility": ["error", { "ignoreConstructors": true }],
    "import-path-check": "off",
    "ordering": "warn",
    "gas-length-in-loops": "warn",
    "gas-named-return-values": "error"
  }
}
