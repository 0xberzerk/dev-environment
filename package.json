{
  "private": true,
  "devDependencies": {
    "@commitlint/cli": "20.4.2",
    "@commitlint/config-conventional": "20.4.2",
    "husky": "9.1.7",
    "lint-staged": "16.2.7",
    "solhint": "6.0.3"
  },
  "scripts": {
    "prepare": "husky",
    "lint": "solhint 'src/**/*.sol' 'test/**/*.sol'",
    "lint:fix": "solhint 'src/**/*.sol' 'test/**/*.sol' --fix",
    "lint:all": "forge fmt --check && solhint 'src/**/*.sol' 'test/**/*.sol' && bulloak check test/**/*.tree",
    "test": "forge test",
    "test:unit": "forge test --match-path 'test/unit/**'",
    "test:integration": "FOUNDRY_PROFILE=integration forge test --match-path 'test/integration/**'",
    "test:invariant": "forge test --match-path 'test/invariant/**'",
    "bulloak:check": "bulloak check test/**/*.tree",
    "bulloak:scaffold": "bulloak scaffold -w test/**/*.tree"
  },
  "lint-staged": {
    "*.sol": [
      "forge fmt --check",
      "solhint"
    ]
  }
}
